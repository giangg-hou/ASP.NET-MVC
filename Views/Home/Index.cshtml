@model IEnumerable<BTL002.Models.Sach>

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center mb-5">
    <h1 class="display-4">Chào mừng đến với Nhà sách Online</h1>
    <p class="lead">Khám phá hàng ngàn đầu sách hay</p>
</div>

<!-- Banner/Carousel -->
<div id="carouselBanner" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/public/banner_2.jpg" class="d-block w-100" alt="Banner 1" style="height: 400px; object-fit: cover;">
        </div>
        <div class="carousel-item">
            <img src="~/images/public/banner_3.jpg" class="d-block w-100" alt="Banner 2" style="height: 400px; object-fit: cover;">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselBanner" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselBanner" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Sách mới -->
<section class="mb-5">
    <h2 class="mb-4"><i class="fas fa-star text-warning"></i> Sách mới</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "/images/no-image.jpg" : item.HinhAnh)"
                         class="card-img-top" alt="@item.TenSach" style="height: 300px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.TenSach</h5>
                        <p class="card-text text-muted">@item.TacGia?.TenTacGia</p>
                        <p class="card-text text-danger fw-bold">@item.GiaBan.ToString("N0") đ</p>
                        <div class="mt-auto">
                            <a asp-controller="Sach" asp-action="Details" asp-route-id="@item.MaSach"
                               class="btn btn-primary btn-sm w-100">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a asp-controller="Sach" asp-action="Index" class="btn btn-outline-primary">
            Xem tất cả <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</section>