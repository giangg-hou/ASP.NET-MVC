@model BTL002.Models.DonHang
@using BTL002.Models

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <!-- Header -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-receipt"></i> Chi tiết đơn hàng #@Model.MaDonHang</h4>
                        <span class="badge
                            @(Model.TrangThai == TrangThaiDonHang.DaGiao ? "bg-success" :
                                                            Model.TrangThai == TrangThaiDonHang.ChoXacNhan ? "bg-info" :
                                                                                          Model.TrangThai == TrangThaiDonHang.DangGiao ? "bg-warning" :
                                                            "bg-danger") fs-5">
                            @Model.TrangThai
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Thông tin khách hàng -->
                        <div class="col-md-6">
                            <h5 class="text-primary"><i class="fas fa-user"></i> Thông tin khách hàng</h5>
                            <table class="table table-sm">
                                <tr>
                                    <th width="40%">Họ tên:</th>
                                    <td><strong>@Model.MaNguoiDung</strong></td>
                                </tr>
                                <tr>
                                    <th>Ngày đặt hàng: </th>
                                    <td>@Model.NgayDatHang</td>
                                </tr>
                                <tr>
                                    <th>Phương thức thanh toán:</th>
                                    <td>@Model.</td>
                                </tr>
                    
                            </table>
                        </div>

                        <!-- Thông tin đơn hàng -->
                        <div class="col-md-6">
                            <h5 class="text-primary"><i class="fas fa-info-circle"></i> Thông tin đơn hàng</h5>
                            <table class="table table-sm">
                                <tr>
                                    <th width="40%">Ngày đặt:</th>
                                    <td>@Model.NgayDatHang.ToString()</td>
                                </tr>
                                <tr>
                                    <th>Trạng thái:</th>
                                    <td>
                                        <span class="badge
                                            @(Model.TrangThai == TrangThaiDonHang.DaGiao ? "bg-success" :
                                                                                                                                          Model.TrangThai == TrangThaiDonHang.ChoXacNhan ? "bg-info" :
                                                                                                                                          Model.TrangThai == TrangThaiDonHang.DangGiao ? "bg-warning" :
                                                                                            "bg-danger")">
                                            @Model.TrangThai
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Phương thức thanh toán:</th>
                                    <td>@Model.PhuongThucThanhToan</td>
                                </tr>
                                <tr>
                                    <th>Tổng tiền:</th>
                                    <td><strong class="text-danger fs-5">@Model.TongTien.ToString("N0") đ</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chi tiết sản phẩm -->
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Sản phẩm đã đặt</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th width="10%">Hình ảnh</th>
                                    <th width="35%">Tên sách</th>
                                    <th width="15%" class="text-end">Đơn giá</th>
                                    <th width="15%" class="text-center">Số lượng</th>
                                    <th width="15%" class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ChiTietDonHangs != null && Model.ChiTietDonHangs.Any())
                                {
                                    foreach (var item in Model.ChiTietDonHangs)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Sach?.HinhAnh))
                                                {
                                                    <img src="@Url.Content(item.Sach.HinhAnh)"
                                                         alt="@item.Sach.TenSach"
                                                         class="img-thumbnail"
                                                         style="max-width: 80px; max-height: 80px;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-light text-center p-2">
                                                        <i class="fas fa-book fa-2x text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <strong>@item.Sach?.TenSach</strong><br />
                                                <small class="text-muted">
                                                    Tác giả: @(item.Sach?.TacGia?.TenTacGia ?? "N/A")
                                                </small>
                                            </td>
                                            <td class="text-end">@item.GiaBan.ToString("N0") đ</td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">x @item.SoLuong</span>
                                            </td>
                                            <td class="text-end">
                                                <strong>@item.ThanhTien.ToString("N0") đ</strong>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            <i class="fas fa-inbox fa-3x mb-3"></i>
                                            <p>Không có sản phẩm nào</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="4" class="text-end">Tổng cộng:</th>
                                    <th class="text-end text-danger fs-5">@Model.TongTien.ToString("N0") đ</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Action buttons -->
            <div class="mt-4 d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <div>
                        @if (Model.TrangThai == TrangThaiDonHang.ChoXacNhan)
                        {
                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="maDonHang" value="@Model.MaDonHang" />
                                <input type="hidden" name="trangThai" value="Đang giao" />
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-shipping-fast"></i> Chuyển sang đang giao
                                </button>
                            </form>
                        }

                        @if (Model.TrangThai == TrangThaiDonHang.DangGiao)
                        {
                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="maDonHang" value="@Model.MaDonHang" />
                                <input type="hidden" name="trangThai" value="Đã giao" />
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check-circle"></i> Xác nhận đã giao
                                </button>
                            </form>
                        }

                        @if (Model.TrangThai != TrangThaiDonHang.DaHuy && Model.TrangThai != TrangThaiDonHang.DaGiao)
                        {
                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="maDonHang" value="@Model.MaDonHang" />
                                <input type="hidden" name="trangThai" value="Đã hủy" />
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này?');">
                                    <i class="fas fa-times-circle"></i> Hủy đơn hàng
                                </button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Print invoice
        function printInvoice() {
            window.print();
        }
    </script>
}

<style>
    @@media print {
        .btn, .card-header {
            display: none !important;
        }
    }
</style>