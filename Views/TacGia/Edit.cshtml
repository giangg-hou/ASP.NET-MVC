@model BTL002.Models.TacGia
@{
    ViewData["Title"] = "Chỉnh sửa tác giả";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Chỉnh sửa tác giả</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="MaTacGia" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="alert alert-info mb-3">
                            <strong>Mã tác giả:</strong> #@Model.MaTacGia
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TenTacGia" class="form-label">
                                <i class="fas fa-user"></i> Tên tác giả <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TenTacGia" class="form-control" />
                            <span asp-validation-for="TenTacGia" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="TieuSu" class="form-label">
                                <i class="fas fa-info-circle"></i> Tiểu sử
                            </label>
                            <textarea asp-for="TieuSu" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="TieuSu" class="text-danger"></span>
                        </div>

                        @if (Model.Sachs != null && Model.Sachs.Any())
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                Tác giả này có <strong>@Model.Sachs.Count sách</strong>
                            </div>
                        }

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}