@model BTL002.Models.TacGia
@{
    ViewData["Title"] = "Thêm tác giả mới";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-plus-circle"></i> Thêm tác giả mới</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="TenTacGia" class="form-label">
                                <i class="fas fa-user"></i> Tên tác giả <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TenTacGia" class="form-control"
                                   placeholder="VD: Nguyễn Nhật Ánh, Paulo Coelho..." autofocus />
                            <span asp-validation-for="TenTacGia" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="TieuSu" class="form-label">
                                <i class="fas fa-info-circle"></i> Tiểu sử
                            </label>
                            <textarea asp-for="TieuSu" class="form-control" rows="6"
                                      placeholder="Nhập tiểu sử, thông tin về tác giả..."></textarea>
                            <span asp-validation-for="TieuSu" class="text-danger"></span>
                            <small class="text-muted">Giới thiệu ngắn gọn về tác giả</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Lưu tác giả
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
