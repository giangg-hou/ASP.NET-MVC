@model IEnumerable<BTL002.Models.GioHang>

@{
    ViewData["Title"] = "Giỏ hàng";
    decimal tongTien = ViewBag.TongTien ?? 0;
}

<h1><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h1>
<hr />

@if (Model.Any())
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@(string.IsNullOrEmpty(item.Sach.HinhAnh) ? "/images/no-image.jpg" : item.Sach.HinhAnh)"
                                                 alt="@item.Sach.TenSach" style="width: 60px; height: 80px; object-fit: cover;" class="me-3">
                                            <div>
                                                <h6 class="mb-0">@item.Sach.TenSach</h6>
                                                <small class="text-muted">@item.Sach.TacGia?.TenTacGia</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle">@item.Sach.GiaBan.ToString("N0") đ</td>
                                    <td class="align-middle">
                                        <form asp-action="CapNhatSoLuong" method="post" class="d-inline">
                                            <input type="hidden" name="maGioHang" value="@item.MaGioHang" />
                                            <div class="input-group" style="width: 120px;">
                                                <input type="number" name="soLuong" value="@item.SoLuong"
                                                       min="1" max="@item.Sach.SoLuongTon" class="form-control form-control-sm" />
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-sync"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                    <td class="align-middle fw-bold text-danger">
                                        @((item.Sach.GiaBan * item.SoLuong).ToString("N0")) đ
                                    </td>
                                    <td class="align-middle">
                                        <form asp-action="Xoa" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                            <input type="hidden" name="maGioHang" value="@item.MaGioHang" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="mt-3">
                <a asp-controller="Sach" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                </a>
                <form asp-action="XoaTatCa" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?');">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-trash-alt"></i> Xóa tất cả
                    </button>
                </form>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td>Tạm tính:</td>
                            <td class="text-end">@tongTien.ToString("N0") đ</td>
                        </tr>
                        <tr>
                            <td>Phí vận chuyển:</td>
                            <td class="text-end">Miễn phí</td>
                        </tr>
                        <tr class="border-top">
                            <th>Tổng cộng:</th>
                            <th class="text-end text-danger fs-4">@tongTien.ToString("N0") đ</th>
                        </tr>
                    </table>
                    <a asp-controller="DonHang" asp-action="ThanhToan" class="btn btn-success w-100 btn-lg">
                        <i class="fas fa-credit-card"></i> Thanh toán
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
        <h3>Giỏ hàng trống</h3>
        <p class="text-muted">Bạn chưa có sản phẩm nào trong giỏ hàng</p>
        <a asp-controller="Sach" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-book"></i> Mua sắm ngay
        </a>
    </div>
}
