@model BTL002.Models.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <form asp-controller="Account" asp-action="ChangePassword" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="MatKhauCu" class="form-control" autocomplete="current-password" />
                <label asp-for="MatKhauCu"></label>
                <span asp-validation-for="MatKhauCu" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="MatKhauMoi" class="form-control" autocomplete="new-password" />
                <label asp-for="MatKhauMoi"></label>
                <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="XacNhanMatKhauMoi" class="form-control" autocomplete="new-password" />
                <label asp-for="XacNhanMatKhauMoi"></label>
                <span asp-validation-for="XacNhanMatKhauMoi" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-primary">Cập nhật mật khẩu</button>
        </form>

        <div class="mt-3">
            <a asp-action="Profile" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}