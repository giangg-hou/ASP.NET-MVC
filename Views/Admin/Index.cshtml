@model IEnumerable<SellerRequestViewModel>

<div class="container mt-4">
    <h2 class="mb-4">Yêu cầu duyệt tài khoản người bán</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Không có yêu cầu nào đang chờ duyệt.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var request in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@request.FullName</h5>
                            <p class="card-text">
                                <strong>Email:</strong> @request.Email<br />
                                <strong>Số điện thoại:</strong> @request.Phone<br />
                                <strong>Địa chỉ:</strong> @request.Address
                            </p>
                            <span class="badge bg-warning">Chờ duyệt</span>

                            <div class="mt-3">
                                <form asp-action="ApproveSellerRequest" method="post" class="d-inline">
                                    <input type="hidden" name="userId" value="@request.UserId" />
                                    <button type="submit" class="btn btn-success btn-sm">Duyệt</button>
                                </form>

                                <form asp-action="RejectSellerRequest" method="post" class="d-inline">
                                    <input type="hidden" name="userId" value="@request.UserId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Từ chối</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <hr class="my-4" />

    <div class="text-center">
        <a asp-action="ManageUsers" class="btn btn-primary">Quản lý người dùng</a>
    </div>
</div>