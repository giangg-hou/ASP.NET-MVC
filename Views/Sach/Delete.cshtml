@model BTL002.Models.Sach

@{
    ViewData["Title"] = "Xóa sách";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model.TenSach</h4>
    <dl class="row">
        <dt class="col-sm-3">Tác giả</dt>
        <dd class="col-sm-9">@Model.TacGia?.TenTacGia</dd>
        <dt class="col-sm-3">Danh mục</dt>
        <dd class="col-sm-9">@Model.DanhMuc?.TenDanhMuc</dd>
        <dt class="col-sm-3">Giá</dt>
        <dd class="col-sm-9">@Model.GiaBan.ToString("C")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.MaSach" />
        <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>