@model BTL002.Models.Sach

@{
    ViewData["Title"] = "Thêm sách mới";
}

<h1><i class="fas fa-plus-circle"></i> Thêm sách mới</h1>
<hr />

<!-- Hiển thị TempData message -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- Hiển thị tất cả lỗi validation -->
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="TenSach" class="form-label"></label>
                <input asp-for="TenSach" class="form-control" />
                <span asp-validation-for="TenSach" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MaTacGia" class="form-label">Tác giả</label>
                    <select asp-for="MaTacGia" class="form-select" asp-items="ViewBag.MaTacGia">
                        <option value="">-- Chọn tác giả --</option>
                    </select>
                    <span asp-validation-for="MaTacGia" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MaNhaXuatBan" class="form-label">Nhà xuất bản</label>
                    <select asp-for="MaNhaXuatBan" class="form-select" asp-items="ViewBag.MaNhaXuatBan">
                        <option value="">-- Chọn NXB --</option>
                    </select>
                    <span asp-validation-for="MaNhaXuatBan" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MaDanhMuc" class="form-label">Danh mục</label>
                    <select asp-for="MaDanhMuc" class="form-select" asp-items="ViewBag.MaDanhMuc">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NamXuatBan" class="form-label"></label>
                    <input asp-for="NamXuatBan" class="form-control" type="number" />
                    <span asp-validation-for="NamXuatBan" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="GiaBan" class="form-label"></label>
                    <input asp-for="GiaBan" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="GiaBan" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SoLuongTon" class="form-label"></label>
                    <input asp-for="SoLuongTon" class="form-control" type="number" />
                    <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="HinhAnh" class="form-label"></label>
                <input type="file" name="uploadImage" class="form-control" accept="image/*" />
                <small class="text-muted">Hoặc nhập URL:</small>
                <input asp-for="HinhAnh" class="form-control mt-1" placeholder="https://..." />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label"></label>
                <textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="TrangThai" class="form-check-input" type="checkbox" />
                    <label asp-for="TrangThai" class="form-check-label">
                        <strong>Duyệt sách ngay</strong>
                        <small class="text-muted d-block">Chọn để sách hiển thị công khai ngay lập tức</small>
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}