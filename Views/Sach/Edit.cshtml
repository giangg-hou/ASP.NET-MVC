@model BTL002.Models.Sach

@{
    ViewData["Title"] = "Chỉnh sửa sách";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Chỉnh sửa thông tin sách</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="MaSach" />
                        <input type="hidden" asp-for="HinhAnh" />

                        <div class="row">
                            <!-- Cột trái -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TenSach" class="form-label">
                                        <i class="fas fa-book"></i> Tên sách <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="TenSach" class="form-control" placeholder="Nhập tên sách" />
                                    <span asp-validation-for="TenSach" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="MaDanhMuc" class="form-label">
                                        <i class="fas fa-list"></i> Danh mục <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="MaDanhMuc" class="form-select" asp-items="ViewBag.DanhMucList">
                                        <option value="">-- Chọn danh mục --</option>
                                    </select>
                                    <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="MaTacGia" class="form-label">
                                        <i class="fas fa-user-edit"></i> Tác giả <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="MaTacGia" class="form-select" asp-items="ViewBag.TacGiaList">
                                        <option value="">-- Chọn tác giả --</option>
                                    </select>
                                    <span asp-validation-for="MaTacGia" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="MaNhaXuatBan" class="form-label">
                                        <i class="fas fa-building"></i> Nhà xuất bản <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="MaNhaXuatBan" class="form-select" asp-items="ViewBag.NhaXuatBanList">
                                        <option value="">-- Chọn nhà xuất bản --</option>
                                    </select>
                                    <span asp-validation-for="MaNhaXuatBan" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="NamXuatBan" class="form-label">
                                        <i class="fas fa-calendar"></i> Năm xuất bản
                                    </label>
                                    <input asp-for="NamXuatBan" type="number" class="form-control" min="1900" max="2100" />
                                    <span asp-validation-for="NamXuatBan" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Cột phải -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="GiaBan" class="form-label">
                                        <i class="fas fa-money-bill-wave"></i> Giá bán <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="GiaBan" type="number" class="form-control" step="1000" min="0" placeholder="VD: 150000" />
                                    <span asp-validation-for="GiaBan" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="SoLuongTon" class="form-label">
                                        <i class="fas fa-boxes"></i> Số lượng <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="SoLuongTon" type="number" class="form-control" min="0" />
                                    <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-image"></i> Hình ảnh hiện tại
                                    </label>
                                    <div class="text-center mb-2">
                                        @if (!string.IsNullOrEmpty(Model.HinhAnh))
                                        {
                                            <img src="@Url.Content(Model.HinhAnh)" alt="@Model.TenSach"
                                                 class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                                        }
                                        else
                                        {
                                            <div class="alert alert-info">
                                                <i class="fas fa-info-circle"></i> Chưa có hình ảnh
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="fileUpload" class="form-label">
                                        <i class="fas fa-upload"></i> Thay đổi hình ảnh
                                    </label>
                                    <input type="file" class="form-control" id="fileUpload" name="ImageFile" accept="image/*" />
                                    <small class="text-muted">Để trống nếu không muốn thay đổi</small>
                                </div>
                            </div>
                        </div>

                        <!-- Mô tả -->
                        <div class="form-group mb-3">
                            <label asp-for="MoTa" class="form-label">
                                <i class="fas fa-align-left"></i> Mô tả sách
                            </label>
                            <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết về sách..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <div>
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> Cập nhật
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Preview image before upload
        document.getElementById('fileUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.querySelector('.img-thumbnail');
                    if (img) {
                        img.src = e.target.result;
                    }
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}