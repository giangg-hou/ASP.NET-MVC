@model BTL002.Models.NguoiDung
@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<h2 class="text-primary mb-3">Thông tin người dùng</h2>

<div class="card shadow p-3">
    <dl class="row">
        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.HoTen</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Số điện thoại</dt>
        <dd class="col-sm-9">@Model.SoDienThoai</dd>

        <dt class="col-sm-3">Địa chỉ</dt>
        <dd class="col-sm-9">@Model.DiaChi</dd>

        <dt class="col-sm-3">Vai trò</dt>
        <dd class="col-sm-9">@Model.VaiTro</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">@Model.TrangThai</dd>

        <dt class="col-sm-3">Ngày đăng ký</dt>
        <dd class="col-sm-9">@Model.NgayDangKy</dd>

        <dt class="col-sm-3">Đã xác thực?</dt>
        <dd class="col-sm-9">@((Model.IsVerified) ? "✔ Đã xác thực" : "✘ Chưa xác thực")</dd>
    </dl>
</div>

<div class="mt-3">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.MaNguoiDung">Sửa</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.MaNguoiDung">Xóa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
</div>
