@model IEnumerable<BTL002.Models.YeuThich>

@{
    ViewData["Title"] = "Danh sách yêu thích";
}

<h1><i class="fas fa-heart text-danger"></i> Danh sách yêu thích</h1>
<hr />

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(item.Sach.HinhAnh) ? "/images/no-image.jpg" : item.Sach.HinhAnh)"
                         class="card-img-top" alt="@item.Sach.TenSach" style="height: 250px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Sach.TenSach</h5>
                        <p class="card-text text-muted">@item.Sach.TacGia?.TenTacGia</p>
                        <p class="card-text text-danger fw-bold">@item.Sach.GiaBan.ToString("N0") đ</p>
                        <small class="text-muted">Thêm ngày: @item.NgayThem.ToString()</small>
                        <div class="mt-auto">
                            <a asp-controller="Sach" asp-action="Details" asp-route-id="@item.Sach.MaSach"
                               class="btn btn-primary btn-sm w-100 mb-2">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                            <form asp-action="Xoa" method="post">
                                <input type="hidden" name="maSach" value="@item.Sach.MaSach" />
                                <button type="submit" class="btn btn-danger btn-sm w-100">
                                    <i class="fas fa-heart-broken"></i> Bỏ yêu thích
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-heart-broken fa-5x text-muted mb-3"></i>
        <h3>Danh sách yêu thích trống</h3>
        <p class="text-muted">Bạn chưa có sản phẩm nào trong danh sách yêu thích</p>
        <a asp-controller="Sach" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-book"></i> Khám phá sách
        </a>
    </div>
}