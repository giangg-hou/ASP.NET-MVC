@model IEnumerable<YourNamespace.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Giỏ hàng</h3>

<table class="table table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Sách</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="cart-body">
        @foreach (var item in Model)
        {
            <tr data-id="@item.CartItemId">
                <td>@item.Book.Title</td>
                <td>@item.UnitPrice.ToString("N0") đ</td>
                <td><input type="number" class="form-control qty" value="@item.Quantity" min="1" /></td>
                <td>@(item.Quantity* item.UnitPrice).ToString("N0") đ</td>
                <td><button class="btn btn-danger btn-sm delete">Xóa</button></td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end">
    <a href="@Url.Action("Checkout", "Order")" class="btn btn-success">Thanh toán</a>
</div>

<script>
    $(".qty").change(function () {
        var row = $(this).closest("tr");
        $.post('@Url.Action("UpdateQuantity", "Cart")', {
            id: row.data("id"),
            qty: $(this).val()
        }, function (res) {
            location.reload();
        });
    });

    $(".delete").click(function () {
        var row = $(this).closest("tr");
        $.post('@Url.Action("Remove", "Cart")', { id: row.data("id") }, function (res) {
            row.remove();
            $("#cart-count").text(res.count);
        });
    });
</script>
