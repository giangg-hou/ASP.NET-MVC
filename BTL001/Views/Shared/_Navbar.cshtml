<script>
    // AJAX search
    $("#searchBox").on("keyup", function () {
        let keyword = $(this).val();
        if (keyword.length < 2) return;
        $.ajax({
            url: '@Url.Action("Search", "Book")',
            data: { q: keyword },
            success: function (data) {
                $("#searchResults").html(data);
            }
        });
    });
</script>
